{
  "name": "ddd-todo-list",
  "packageManager": "yarn@3.5.1",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "yarn workspace @ddd-todo-list/client start",
    "server": "yarn workspace @ddd-todo-list/server start",
    "prepare": "husky install",
    "lint": "npx eslint . --ext .tsx --ext .ts",
    "format": "npx prettier --write --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "i": "^0.3.7",
    "npm": "^9.6.6",
    "prettier": "^2.8.8"
  }
}
